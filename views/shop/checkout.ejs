<%- include ../partials/header %>
<div class="container mt-4 mb-5">
  <!-- Flash messages -->
  <div class="row mt-3 mb-3">
    <div class="col-md-6 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>
  
  <!-- Checkout forms -->
  <div class="row">
    <div class="col-md-4 m-auto">
      <form action="/checkout/cardpayment" method="POST" id="checkout-form">
          <div class="col-md-12 lead">
            Enter Your CARD Information
            <br><br>
            <div class="form-group">
              <input type="text" id="card-name" class="form-control" required placeholder="Card Holder Name"/>
            </div>
          
            <!-- A Stripe Element will be inserted here. -->
            <div id="card-element" class="StripeElement"></div>
            <!-- Used to display form errors. -->
            <div id="card-errors" role="alert" class="text-danger mb-3"></div>
            <!-- csrf token should have value of <%= csrfToken %> -->
            <input type="hidden" name="_csrf" value="0000" />

            <div class="form-group">
              <input
                type="textarea"
                id="address"
                placeholder="Shipping Address"
                class="form-control"
                required
                name="address"
              />
            </div>
           <br>
            <button id="submit-btn" type="submit" class="btn btn-dark button-style">
              Buy now
            </button>
          </div>
      </form>
    </div>
      
    <div class="col-md-2 m-auto">
      <h6 class="lead">OR Proceed with</h6> 
    </div>

    <div class="col-md-4 m-auto">
      <img src="/images/cod-img.jpg" class="circle-img-2">
      <br><br>
      <form action="/checkout/cod" method="POST" id="checkout-form">
        <input
          type="text"
          id="address"
          placeholder="Shipping Address"
          class="form-control"
          required
          name="address"
        />
        <br>
        <button id="submit-btn" type="submit" class="btn btn-dark">
          Cash On Delivery
        </button>
      </form>
    </div>
  </div>

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>

<%- include ../partials/footer %>
